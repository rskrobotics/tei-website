---
import { useTranslations } from "../i18n/utils";

// Determine language from URL path
const isEnglish = Astro.url.pathname.startsWith("/en");
const lang = isEnglish ? "en" : "pl";
const t = useTranslations(lang);

const currentYear = new Date().getFullYear();
---

<footer class="footer bg-base-200 text-base-content p-10">
    <div class="container mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            <!-- Invoice Data / Company Info -->
            <div>
                <h3 class="footer-title opacity-100 text-lg mb-4">
                    {t("footer.invoiceData")}
                </h3>
                <p class="text-sm opacity-70">
                    <strong>{t("footer.companyName")}</strong><br />
                    {t("footer.addressLine1")}<br />
                    {t("footer.addressLine2")}<br />
                    <strong>NIP:</strong> 687 122 10 90
                </p>
            </div>

            <!-- Production Hall -->
            <div>
                <h3 class="footer-title opacity-100 text-lg mb-4">
                    {t("footer.productionHall")}
                </h3>
                <p class="text-sm opacity-70">
                    {t("footer.productionLocation")}
                </p>
            </div>

            <!-- Contact Info -->
            <div>
                <h3 class="footer-title opacity-100 text-lg mb-4">
                    {t("footer.contactInfo")}
                </h3>
                <div class="text-sm opacity-70 space-y-2">
                    <p>
                        <strong>{t("footer.phone")}:</strong><br />
                        <a href="tel:+48503197125" class="link link-hover"
                            >+48 503 197 125</a
                        >
                    </p>
                    <p>
                        <strong>{t("footer.email")}:</strong><br />
                        <a
                            href="mailto:biuro@tei.net.pl"
                            class="link link-hover">biuro@tei.net.pl</a
                        >
                    </p>
                </div>
            </div>

            <!-- Social Media -->
            <div>
                <h3 class="footer-title opacity-100 text-lg mb-4">
                    {t("footer.followUs")}
                </h3>
                <div class="flex gap-4">
                    <a
                        href="https://www.facebook.com/teikasprzyk/"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="link link-hover"
                        aria-label="Facebook"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="32"
                            height="32"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                            class="hover:opacity-70 transition-opacity"
                        >
                            <path
                                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                            ></path>
                        </svg>
                    </a>
                </div>
            </div>
        </div>

        <!-- Bottom Bar with Copyright and Website Credit -->
        <div
            class="w-full border-t border-base-300 pt-6 mt-8 flex flex-col md:flex-row justify-between items-center gap-4"
        >
            <p class="text-sm opacity-70 text-center md:text-left">
                Â© {currentYear}
                {t("footer.companyName")}. {t("footer.copyright")}.
            </p>
            <p class="text-sm opacity-70 text-center md:text-right">
                {t("footer.websiteMadeBy")}
                <a
                    href="https://kkasprzyk.eu"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="link link-hover font-semibold">kkasprzyk</a
                >
            </p>
        </div>
    </div>
</footer>
